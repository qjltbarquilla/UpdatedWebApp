const mongoose = require("mongoose");

// Schema for user registration
const registeredUserSchema = new mongoose.Schema({
  username: {
    type: String,
    required: true,
    unique: true, // makes sure username is not duplicated
  },
  password: {
    type: String,
    required: true,
  },
  role: {
    type: String,
    default: "user", // optional â€” can be "user", "admin", etc.
  },
  createdAt: {
    type: Date,
    default: Date.now, // automatically adds timestamp
  },
});

// Create a collection named "registeredusers"
module.exports = mongoose.model("RegisteredUser", registeredUserSchema);
